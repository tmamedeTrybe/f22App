{
  "compilerOptions": {
   
    "target": "es2016",
    "module": "commonjs",                               
    "rootDir": "./",                      
    "moduleResolution": "node",
    "types": [
      "@types/jest",
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist"],
  "include": [
    "src/**/*"
  ]
}
